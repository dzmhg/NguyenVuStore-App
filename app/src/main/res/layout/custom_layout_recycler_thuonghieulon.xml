<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/android"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/progress_bar_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:id="@+id/lnthuonghieulon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"

            >

            <TextView
                android:id="@+id/txtTieuDeThuongHieuLonLinhKien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSI"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/imHinhThuongHieuLonLinhKien"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/pgcover"

                />

        </LinearLayout>

    </FrameLayout>




</android.support.v7.widget.CardView>